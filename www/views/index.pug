extends layout

block content
  .ui.secondary.pointing.menu
    a.active.item Todos 
    a.item iberlibro 
    a.item Amazón ES
    a.item Amazón DE
    a.item Amazón FR
    a.item Amazón IT
    a.item Amazón UK
    .right.menu
      a.ui.item.new 
        i.big.plus.circle.icon.blue 
  .ui.segment
    #jsGrid
  
  #edit.ui.modal
    .header.book Header
    .content
      
      form.ui.form.editForm
        h4.ui.dividing.header Información de libro
        .field
          .fields
              .five.wide.field
                label
                  span
                    span REF
                    span.red *
                input(id='id' type='text', name='idbooks', placeholder='referencia',disabled="")

              .five.wide.field
                label Isbn
                input(type='text', name='universalIdentifier_number', placeholder='ISBN')
              .five.wide.field
                  label 
                    span
                      span PRECIO
                      span.red *
                  input(style="text-align:right", type='text', name='price_quantity', placeholder='PRECIO')
              .five.wide.field
                  label LOCALIZACIÓN
                  input(type='text', name='_loc', placeholder='estanteria....')

              .five.wide.field(style="margin-top:30px;")                  
                  .ui.toggle.checkbox
                    input.hidden(type='checkbox', name='_sales', tabindex='0') 
                    label Vendido      
        .field
          .two.fields
            .field
              label
                span
                  span TITULO
                  span.red *
              input(type='text', name='title', placeholder='Titulo de la obra')
            .field
              label 
                span
                  span AUTOR
                  span.red *
              input(type='text', name='author', placeholder='Autor de la Obra')
        .field
          label Descripcion
          .fields
            textarea(name='description' rows="4")
        .field
          .two.fields
            .field
              label Tipo
              .ui.search.selection.dropdown.productType
                input(type='hidden', name='productType', value='')
                i.dropdown.icon
                .default.text  Tipo 
                .menu 
            .field
              label Estado General
              .ui.search.selection.dropdown.bookCondition
                input(type='hidden', name='bookCondition', value='')
                i.dropdown.icon
                .default.text  Estado General 
                .menu  
            .field
              label Estado Cubierta
              .ui.search.selection.dropdown.jacketCondition
                input(type='hidden', name='jacketCondition', value='')
                i.dropdown.icon
                .default.text  Estado cubierta 
                .menu
        .field
          .two.fields 
            .field
              label Encuadernación
              .ui.search.selection.dropdown.bindingText
                input(type='hidden', name='bindingText', value='')
                i.dropdown.icon
                .default.text Encuadernación 
                .menu
            .field
              label Firmas y dedicatorias
              .ui.search.selection.dropdown.inscriptionType
                input(type='hidden', name='inscriptionType', value='')
                i.dropdown.icon
                .default.text Firmas y dedicatorias 
                .menu
            .field
              label Edición
              .ui.search.selection.dropdown.edition
                input(type='hidden', name='edition', value='')
                i.dropdown.icon
                .default.text Edición 
                .menu
        h4.ui.dividing.header Datos de publicación
        .two.fields
          .field
            label
              span
                span PUBLICADO POR
                span.red *            
            input(type='text', name='publisherName', placeholder='Nombre')
          .thirteen.field
            label Año
            input(type='text', name='publishYear', placeholder='Año',style="width:90px;text-align:right")
        .ui.button(tabindex='0') Orden de Envío
    .actions
      span
        span.left.red * 
        span campos obligatorios
                
      .ui.approve.button Crear
      .ui.cancel.button Cancelar